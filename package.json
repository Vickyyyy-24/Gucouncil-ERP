{
  "name": "dynamic-crm-system",
  "version": "1.0.0",
  "description": "Full-stack Dynamic CRM with role-based authentication",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/server.js",
    "install-all": "npm install && cd client && npm install",
    "quick-start": "./quick-start.sh",
    "setup": "npm run install-all && npm run build",
    "production": "npm run setup && npm start",
    "db-init": "node server/scripts/init-db.js",
    "backup": "node server/scripts/backup.js",
    "restore": "node server/scripts/restore.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "chart.js": "^4.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "framer-motion": "^12.23.26",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "next": "^16.1.1",
    "pdfkit": "^0.14.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "react": "^19.2.3",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.3",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  },
  "keywords": [
    "crm",
    "role-based",
    "authentication",
    "biometric",
    "attendance"
  ],
  "author": "Dynamic CRM System",
  "license": "MIT"
}
